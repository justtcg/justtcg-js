{
  "compilerOptions": {
    /* Build Options */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",

    /* Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* JavaScript Support */
    "allowJs": false,

    /* Interoperability */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Library Options */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
